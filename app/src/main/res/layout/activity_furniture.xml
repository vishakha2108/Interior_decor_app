<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Furniture">


    <Button
        android:id="@+id/button_sofa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_chair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/furniture_text" />

    <Button
        android:id="@+id/button_chair"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_desk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_sofa" />

    <Button
        android:id="@+id/button_desk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="20dp"
        android:text="Button"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_bed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chair" />

    <Button
        android:id="@+id/button_bed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/button_wardrobe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_desk" />

    <Button
        android:id="@+id/button_wardrobe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Button"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bed" />

    <TextView
        android:id="@+id/furniture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on furniture item to buy now!!"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_sofa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />


</androidx.constraintlayout.widget.ConstraintLayout>